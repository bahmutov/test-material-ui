{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "prConcurrentLimit": 6,
  "prHourlyLimit": 6,
  "schedule": [
    "after 10pm and before 5am on every weekday",
    "every weekend"
  ],
  "masterIssue": true,
  "labels": [
    "type: dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "excludePackagePatterns": [
        "cypress",
        "cypress-expect",
        "cypress-react-unit-test"
      ],
      "enabled": false
    }
  ]
}
